<div class="jumbotron">
    <h1>Make a new appointment type</h1>
    <div>
        Enter information about your appointment type.
    </div>
</div>
<div class="container">
    <div class="cl-lg-12 cl-md-12 cl-sm-12 cl-xs-12">
        @using (Html.BeginForm("AddAppointmentType", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-row mb-4">
                <label for="Name">Name:</label>
                <input type="text" class="form-control" id="Name" name="Name" required
                       autocomplete="on" autofocus minlength="2" maxlength="20"
                       pattern="[a-zA-Z]+" title="Name">
            </div>
            <div class="form-row mb-4">
                <label for="StartTime">Start Time:</label>
                <input type="time" class="form-control" id="StartTime" name="StartTime"
                       required min="00:00" max="24:00" title="Start time">
            </div>
            <div class="form-row mb-4">
                <label for="StartTime">Start Time:</label>
                <input type="time" class="form-control" id="StartTime" name="StartTime"
                       required min="00:00" max="24:00" title="Start time">
            </div>
        }
    </div>
</div>
